<div class="container">
  <div class="row">

    <br>
    <div class="col-md-5">
      <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>

    <div class="col-md-7">
      <h2><%= @product.title %></h2>
      <div style="height:100px;">
        <p>
          <%= simple_format(@product.description) %>
        </p>
      </div>
      <div>
        数量： <%= @product.quantity %>
      </div>
      <div class="producr-price"> ￥ <%= @product.price %></div>
      <div >
        <% if @product.quantity.present? && @product.quantity > 0 %>
          <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-danger") %>
        <% else %>
          <a href="#" class="btn btn-danger active" role="button" disabled="disabled">库存缺货ing...</a>
        <% end %>
      </div>
    </div>

  </div>
</div>
