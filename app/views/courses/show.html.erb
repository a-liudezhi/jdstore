<div class="container">

    <!-- 课程主图banner区域 -->
    <div class="img-responsive center-block">
      <%= image_tag(@course.image.course_img.url, class: "img-responsive center-block") %>
    </div>


    <div class="course-show-box">
      <!-- 课程内容介绍 -->
      <div class="col-md-9">
        <h2 class="course-title">
          <%= @course.title %>
        </h2>
        <div class="course-description">
          <%= simple_format(@course.description) %>
        </div>
      </div>

      <!-- 作者介绍 -->
      <div class="col-md-3 course-author-box">
        老司机
      </div>
    </div>




</div>
