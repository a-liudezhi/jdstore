<!-- 首页精选商品列表 -->
  <div class="container all-product-box">
    <div class="row">

      <div class="container topspan">
        <div class="row">
          <div class="col-xs-6">
            <h3 class="titspan">商品</h3>
          </div>
          <div class="col-xs-6">
            <%= link_to("more >", products_path, class: "pull-right morespan") %>
          </div>
        </div>
      </div>

      <% @products.each do |product| %>
        <div class="col-xs-6 col-md-3 text-center product-list-style">
          <% link_to product_path(product) %>
            <% if product.image.present? %>
              <%= link_to image_tag(product.image.thumb.url, class: "product-list-style-img"), product_path(product) %>
            <% else %>
              <%= link_to image_tag("http://placehold.it/200x200&text=No Pic", class: "pproduct-list-style-img"), product_path(product) %>
            <% end %>
          <br>
          <%= link_to(product.title, product_path(product)) %>
          <br>
          <strong>￥ <%= link_to(product.price, product_path(product)) %></strong></p>
        </div>
      <% end %>

    </div>
  </div>


